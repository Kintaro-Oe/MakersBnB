    <b style="font-size:20px;"><%= property.property_name %></b><b style="font-size:10px;"> - Â£<%= property.price %> per night</b>
    <dl style="color:grey;"">
    <dt>Description:</dt>
    <dd><%= property.description %></dd>
    </dl><br>
    Available dates: <%= property.available_dates.strftime('%d-%m-%Y') %>
    <% if @first_name %>&nbsp;
    <form action="/request_sent" method="get" align = "right">
    <input id= "<%= property.property_name %>" type="submit" class = "button" value="Request a booking">
  </form><% end %>
  <hr></div>
<% end %>



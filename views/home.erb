<center>
  <br><h2>Welcome <% if @first_name %><%= @first_name %><% end %>!</h2>

<% if @first_name %><form action="/sign_out" method="post">
<input type="submit" value="Sign Out" class = "button" style="border:none">
</form><% end %>
<% unless @first_name %> <form action="/sign_in" method="get">
 <input type="submit" value="Sign In" class = "button" style="border:none">
 </form><% end %>

<% if @first_name %><form action="/add_listing" method="get">
<input type="submit" value="Add new listing" class = "button" style="border:none">
</form><% end %>

<% if @first_name %><form action="/manage_properties" method="get">
<input type="submit" value="Manage your properties" class = "button" style="border:none">
</form><% end %>
</center>


